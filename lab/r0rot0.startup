#!/bin/bash
/hostlab/r0rot0-auto.sh

# Enlace: interfaces físicas
ip link set eth0 up

# Enlace: VLAN
vconfig set_name_type DEV_PLUS_VID
#
vconfig add eth0 0010
ip link set eth0.0010 up
#
vconfig add eth0 0020
ip link set eth0.0020 up

# Enlace: ponte

# Rede: endereçamento
ip -4 addr add 10.0.10.254/24 dev eth0.0010
ip -4 addr add 10.0.20.254/24 dev eth0.0020

# Rede: roteamento
sysctl -w net.ipv4.conf.all.forwarding=1
